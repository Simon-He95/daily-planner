{
  "publisher": "simonhe",
  "name": "daily-planner",
  "displayName": "Daily Planner",
  "version": "0.0.28",
  "packageManager": "pnpm@8.1.1",
  "description": "daily-planner",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/daily-planner#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/daily-planner"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/daily-planner/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoList",
          "title": "Daily Planner",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "todoList": [
        {
          "type": "webview",
          "id": "DailyPlannerView.id",
          "name": "plan list"
        }
      ]
    },
    "commands": [
      {
        "command": "todoList.addTodo",
        "title": "Add Plan"
      },
      {
        "command": "todoList.editTodo",
        "title": "editTodo",
        "icon": {
          "light": "assets/light/edit.svg",
          "dark": "assets/dark/edit.svg"
        }
      },
      {
        "command": "todoList.deleteTodo",
        "title": "deleteTodo",
        "icon": {
          "light": "assets/light/delete.svg",
          "dark": "assets/dark/delete.svg"
        }
      },
      {
        "command": "todoList.generateReport",
        "title": "生成日报",
        "icon": {
          "light": "assets/light/one.svg",
          "dark": "assets/dark/one.svg"
        }
      },
      {
        "command": "todoList.uncheck",
        "title": "勾选",
        "icon": {
          "light": "assets/light/uncheck.svg",
          "dark": "assets/dark/uncheck.svg"
        }
      },
      {
        "command": "todoList.check",
        "title": "取消",
        "icon": {
          "light": "assets/light/check.svg",
          "dark": "assets/dark/check.svg"
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "todoList.editTodo",
          "group": "inline@2",
          "when": "view == DailyPlannerView.id && viewItem == todoList"
        },
        {
          "command": "todoList.deleteTodo",
          "group": "inline@3",
          "when": "view == DailyPlannerView.id && viewItem == todoList"
        },
        {
          "command": "todoList.generateReport",
          "group": "inline@2",
          "when": "view == DailyPlannerView.id && viewItem =~ /daily/"
        },
        {
          "command": "todoList.uncheck",
          "group": "inline@1",
          "when": "view == DailyPlannerView.id && viewItem =~ /daily/ && !(viewItem =~ /daily-check/)"
        },
        {
          "command": "todoList.check",
          "group": "inline@1",
          "when": "view == DailyPlannerView.id && viewItem == daily-check"
        }
      ]
    }
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "test": "vitest",
    "build": "tsup src/index.ts --external vscode",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@types/koa": "^2.13.6",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "@vscode-use/createwebview": "^0.0.8",
    "@vscode-use/registerwebview": "^0.0.2",
    "@vscode-use/utils": "^0.0.1",
    "anthropic-ai": "^0.0.8",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "esno": "^0.16.3",
    "koa": "^2.14.2",
    "koa-router": "^12.0.0",
    "nanoid": "^4.0.2",
    "pnpm": "^8.1.1",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "uuid": "^9.0.0",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "vsce": "^2.15.0"
  }
}
