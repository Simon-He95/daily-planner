{
  "publisher": "simonhe",
  "name": "daily-planner",
  "displayName": "Daily Planner",
  "version": "0.0.30",
  "packageManager": "pnpm@8.1.1",
  "description": "daily-planner",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/daily-planner#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/daily-planner"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/daily-planner/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoList",
          "title": "每日计划",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "todoList": [
        {
          "type": "webview",
          "id": "DailyPlannerView.id",
          "name": "计划列表"
        }
      ]
    }
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "test": "vitest",
    "build": "tsup src/index.ts --external vscode",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "watch": "npx tailwindcss -i ./tailwind.css -o ./media/tailwind.css --watch",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@types/koa": "^2.13.6",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "@vscode-use/createwebview": "^0.0.8",
    "@vscode-use/registerwebview": "^0.0.2",
    "@vscode-use/utils": "^0.0.4",
    "anthropic-ai": "^0.0.8",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "esno": "^0.16.3",
    "koa": "^2.14.2",
    "koa-router": "^12.0.0",
    "nanoid": "^4.0.2",
    "pnpm": "^8.1.1",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "uuid": "^9.0.0",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "vsce": "^2.15.0"
  }
}
